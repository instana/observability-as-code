{
  "name": "Low Jenkins Job Health Score",
  "description": "Detects when a Jenkins job has a low health score, which may indicate recurring build failures or other issues with the job.",
  "entityType": "openTelemetry",
  "expirationTime": 300000,
  "rules": [
    {
      "ruleType": "threshold",
      "window": 300000,
      "severity": 10,
      "metricName": "metrics.gauges.github.com/open-telemetry/opentelemetry-collector-contrib/receiver/jenkinsreceiver/jenkins.job.health_score",
      "aggregation": "avg",
      "conditionOperator": "<",
      "conditionValue": 30
    }
  ]
}