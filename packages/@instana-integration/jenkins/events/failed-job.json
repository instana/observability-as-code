{
  "name": "Failed Jenkins Job",
  "description": "Detects when a Jenkins job has failed, which requires immediate attention to fix the build issues.",
  "query": "entity.type:\"jenkins-service\"",
  "entityType": "openTelemetry",
  "expirationTime": 300000,
  "rules": [
    {
      "ruleType": "threshold",
      "window": 300000,
      "severity": 10,
      "metricName": "metrics.gauges.github.com/open-telemetry/opentelemetry-collector-contrib/receiver/jenkinsreceiver/jenkins.job.status",
      "aggregation": "avg",
      "conditionOperator": "==",
      "conditionValue": 0
    }
  ]
}